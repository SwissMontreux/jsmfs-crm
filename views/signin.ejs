<meta name="ac:route" content="/signin">
<div class="d-lg-flex half">
    <div class="bg order-1 order-md-2" style="background-image: url('/assets/images/bg_1.jpg');"></div>


    <div class="contents order-2 order-md-1">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7">
                    <h3>Login to <strong>Dashboard</strong></h3>
                    <p class="mb-4">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p>
                    <form method="post" is="dmx-serverconnect-form" id="scFormLogin" action="/api/Users/SignIn" dmx-on:success="notifies1.success('Login Success');scFormLogin.reset(true);browser1.goto('/dashboard')" dmx-on:error="notifies1.warning('Unauthorized User')" dmx-on:unauthorized="notifies1.warning('Unauthorized User')" dmx-on:forbidden="notifies1.warning('Unauthorized User')">
                        <div class="form-group first">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" placeholder="your-email@gmail.com" id="username" name="username" required>
                        </div>
                        <div class="form-group last mb-3">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" placeholder="Your Password" id="password" name="password" required>
                        </div>
                        <div class="d-flex mb-5 align-items-center">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked style="height:20px;width:20px; " name="remember">
                                <label class="form-check-label text-muted pl-2 pt-1" for="flexCheckChecked">
                                    Remember me
                                </label>
                            </div><span class="ml-auto"><a href="#" class="forgot-pass">Forgot Password</a></span>
                        </div>
                        <input type="submit" value="Log In" class="btn btn-block btn-primary">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
