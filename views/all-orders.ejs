                    <th class="sorting" dmx-on:click="qm.set('sort','order_currency');qm.set('offset',qm.data.offset == 'desc' ? 'asc' : 'desc')" dmx-class:sorting_asc="qm.data.sort=='order_currency' && qm.data.offset == 'asc'" dmx-class:sorting_desc="qm.data.sort=='order_currency' && qm.data.offset == 'desc'">Order currency</th>
                    <th class="sorting" dmx-on:click="qm.set('sort','payment_method');qm.set('offset',qm.data.offset == 'desc' ? 'asc' : 'desc')" dmx-class:sorting_asc="qm.data.sort=='payment_method' && qm.data.offset == 'asc'" dmx-class:sorting_desc="qm.data.sort=='payment_method' && qm.data.offset == 'desc'">Payment method</th>
